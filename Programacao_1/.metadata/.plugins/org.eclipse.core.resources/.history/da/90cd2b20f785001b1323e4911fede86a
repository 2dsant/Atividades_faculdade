import java.util.Scanner;

public class Atividade_Salto {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Atleta: \n");
		String nome = scan.nextLine();  
		
		System.out.println("Primeiro salto: \n");
		double salto1 = scan.nextDouble(); 
		System.out.println("Segundo salto: \n");
		double salto2 = scan.nextDouble();
		System.out.println("Terceiro salto: \n");
		double salto3 = scan.nextDouble();
		System.out.println("Quarto salto: \n");
		double salto4 = scan.nextDouble();
		System.out.println("Quinto salto: \n");
		double salto5 = scan.nextDouble();
		
		double media = (salto1 + salto2 + salto3 + salto4 + salto5) / 5;
		
		System.out.println("Resultado final: \n"+ "Atleta: " + nome + "\n" + 
		"Saltos: " + salto1 + " - " + salto2 + " - " + salto3 + " - " + salto4 + " - " + salto5 + " - " +
		"\nMédia dos saltos: " + media); 
	}

}
